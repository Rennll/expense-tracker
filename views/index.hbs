<div class="container mt-2 mx-auto" style="max-width:800px">
  <div class="dropdown mb-5">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
      類別
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      {{#each categories}}
      <li><a class="dropdown-item" href="/?category={{ this.id }}">{{ this.name }}</a></li>
      {{/each}}
    </ul>
  </div>

  <div class="mb-3 d-flex align-items-start" style="font-size:1.5em">
    總金額：<span style="font-size: 80px; color:orange; margin-top:0">{{ totalAmount }}</span>
  </div>
  <ul class="list-group mb-3">
    {{#each records}}
    <li class="list-group-item">
      <div class="row d-flex align-items-center">
        <div class="col-2">
          <i class="{{ this.icon }}" style="font-size: 60px; display: inline"></i>
        </div>
        <div class="col-4 d-flex flex-column">
          <div class="col" style="font-size:1.5em;">{{ this.name }}</div>
          <div class="col">{{ this.date }}</div>
        </div>
        <div class="col">{{ this.amount }}</div>
        <div class="col">
          <a href="./records/{{ this._id }}/edit">修改</a>                   
        </div>
        <div class="col">
          <form action="./records/{{ this._id }}/delete" method="post">
            <button type="submit" class="btn btn-primary">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>